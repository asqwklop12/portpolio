<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PaggingMapper">

	<select id="board" resultType="int">
		SELECT 
				count(boardId) 
								from boardInfo;
	
	</select>
 

	<select id="book" resultType="int" parameterType="string">
		SELECT 
						count(bookId) 
														FROM defaultbookinfo
								
								
		WHERE				BookTitle LIKE '${value}%' 
						OR  bookTitle LIKE '%${value}'
                        OR  bookTitle LIKE '%${value}%'
                        OR  bookTitle	  = '${value}'						
								
	</select>

</mapper>