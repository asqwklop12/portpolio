<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">

 <select id="board" resultType="BoardList">
     
       SELECT 
                  boardId,
	              boardTitle,
                  boardWriter,
                  boardDate,
	   
	              boardView,
                  boardLike,
                  boardShare
                                           FROM 
 														    boardInfo 
 	NATURAL JOIN 
 	               boardCount 
 										   ORDER BY   boardId ASC;
 
 </select>
   
</mapper>


