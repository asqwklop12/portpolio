<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">

 <insert id="Register">
 	Insert into 
 					userInfo 
 	values
 	      (      #{image} 
 	          ,  #{email}
 	          ,  #{name} 
 	          ,  #{password}
 	          ,  #{introduce}
 	          ,  now()
 	       )
 	          
 </insert>
         
 <select id="login"  parameterType="LoginResult" resultType ="map">
   
    SELECT   UserEmail
               , UserPassword
               , UserName
                                      FROM UserInfo
                                      
    WHERE 
               UserEmail = #{email}   
         
 </select>
   
</mapper>


