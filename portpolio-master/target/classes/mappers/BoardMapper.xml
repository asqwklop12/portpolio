<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">

 <select id="list" resultType="board">
     
       SELECT  
                     boardId 		as no
                    ,boardTitle 	as title
                    ,boardWriter	as writer
       	            ,boardDate   	as date
       	            
                                                FROM 
 	   boardInfo 
 </select>
 
 <select id="detail" resultType="result">
    	
      SELECT 
      		    	boardId			as no
      		  	   ,boardTitle		as title
      		  	   ,boardWriter		as writer
      		       ,UserImage		as image
      		       ,boardContent 	as content
      		       
      		        				            FROM
      boardInfo 
      		      JOIN 
      		      		userInfo 
      		      				  ON 
      		      				  		boardWriter = userName
      		      				  		
      		     WHERE 
      		     
      		     	   	boardId = #{no}  		
      		     				  		
 </select>
   
</mapper>


